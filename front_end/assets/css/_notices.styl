.notice
  position relative
  margin spacing-block + 5px 0
  font-size font-size-base
  background white
  background-repeat no-repeat
  background-position spacing-block center
  border 2px solid action-blue
  box-shadow 0px 1px 2px 0px alpha(#000, 0.26)
  padding spacing-block
  padding-bottom spacing-block - 5px
  notice:first-child &
    margin-top 0
  .error &
    padding-left spacing-block * 2.75
    color action-red
    border-color action-red
    background-image url(unquote('data:image/svg+xml;base64,'))

  close-size = 40px

  .close
    position absolute
    cursor pointer
    top 50%
    right spacing-block - (close-size/2) + 5px
    margin-top -(close-size/2)
    width close-size
    height close-size
    &:after
      content '\00d7'
      position absolute
      font-size 1.5em
      font-weight bold
      top 50%
      left 50%
      margin -0.35em 0 0 -0.2em
