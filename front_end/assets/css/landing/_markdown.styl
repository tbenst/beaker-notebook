.markdown.section
  padding: 22px

  h2, h1
    color:        #6fc21d
    margin:       48px 0
    font-size:    32px
    text-align:   center
    font-family:  'Open Sans'

  h4, h3
    text-transform: uppercase
    font-family: pt_sansbold
    margin-bottom: 20px

  ul
    line-height: 25px
    list-style: initial
    margin-bottom: 20px
    margin-left: 20px

  p
    margin:       10px 0
    font-size:    17px
    line-height:  27px

  pre
    margin-bottom: 20px
    display: inline-block

  code, pre
    font-family: monospace
    background: #F6F6F6
    padding: 10px

  code
    line-height: 40px
    word-break: break-all

  strong
    font-family: pt_sansbold

  img
    width:  100%
    margin: 31px auto
    display: block
